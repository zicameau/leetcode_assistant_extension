{
    "name": "Leetcode Assistant",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
    "default_icon": "leetcode-600x400.png",
    "default_title": "Toggle LeetCode Assistant"
    },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://firestore.googleapis.com https://identitytoolkit.googleapis.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://www.googleapis.com https://*.googleapis.com https://firebasestorage.googleapis.com https://*.firebasestorage.app https://api.openai.com https://api.anthropic.com https://generativelanguage.googleapis.com"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*",
    "https://leetcode.com/*",
    "https://*.leetcode.com/*",
    "https://leetcode.cn/*",
    "https://*.leetcode.cn/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/*",
                "https://*.leetcode.com/*",
                "https://leetcode.cn/*",
                "https://*.leetcode.cn/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "pageBridge.js"
      ],
      "matches": [
        "https://leetcode.com/*",
        "https://*.leetcode.com/*",
        "https://leetcode.cn/*",
        "https://*.leetcode.cn/*"
      ]
    }
  ]
  }